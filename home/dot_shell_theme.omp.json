{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "palette": {
    "accent": "#FFFFFF",
    "background": "#FFE700",
    "current-line": "#44475A",
    "foreground": "#77E4F7",
    "comment": "#6272A4",
    "cyan": "#8BE9FD",
    "green": "#50FA7B",
    "orange": "#FFB86C",
    "pink": "#FF79C6",
    "purple": "#BD93F9",
    "red": "#FF5555",
    "yellow": "#F1FA8C"
  },
  "upgrade": {
    "source": "cdn",
    "interval": "168h",
    "auto": false,
    "notice": false
  },
  "shell_integration": true,
  "enable_cursor_positioning": true,
  "transient_prompt": {
    "template": "{{ if .Root }}<p:red> # </>{{else}} ❯ {{end}}",
    "foreground": "#43D426",
    "background": "transparent"
  },
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "foreground": "p:foreground",
          "leading_diamond": "<p:foreground,transparent>\u256d\u2500</>",
          "style": "diamond",
          "template": " {{ if .WSL }}WSL at {{ end }}{{.Icon}} {{.HostName}}",
          "type": "os"
        },
        {
          "options": {
            "style": "full"
          },
          "template": "\uf07c {{ $p := .Path }}{{ if ne (dir $p) \".\" }}{{ dir $p }}/{{ end }}<p:accent><b>{{ base $p }}</b></> ",
          "foreground": "p:foreground",
          "type": "path",
          "style": "plain"
        },
        {
          "type": "git",
          "style": "plain",
          "foreground_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}p:yellow{{ end }}",
            "{{ if and (gt .Ahead 0) (gt .Behind 0) }}p:red{{ end }}",
            "{{ if gt .Ahead 0 }}p:cyan{{ end }}",
            "{{ if gt .Behind 0 }}p:orange{{ end }}"
          ],
          "template": "{{ .UpstreamIcon }}{{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }}  {{ .Working.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }}  {{ .Staging.String }}{{ end }}{{ if gt .StashCount 0 }}  {{ .StashCount }}{{ end }}",
          "options": {
            "fetch_status": true,
            "fetch_upstream_icon": true
          }
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "right",
      "segments": [
        {
          "foreground_templates": ["{{ if gt .Code 0 }}p:red{{ end }}"],
          "foreground": "p:green",
          "powerline_symbol": "\ue0b2",
          "options": {
            "always_enabled": true
          },
          "style": "plain",
          "template": " {{ if gt .Code 0 }}\uf467 {{ reason .Code }}{{ else }}\uf42e{{ end }} ",
          "type": "status"
        },
        {
          "foreground": "p:black",
          "powerline_symbol": "\ue0b2",
          "style": "plain",
          "template": " \uf252 {{ .FormattedMs }} ",
          "type": "executiontime"
        },
        {
          "foreground": "p:cyan",
          "options": {
            "fetch_version": true
          },
          "style": "plain",
          "template": " \ue627 {{ if .Error }}{{ .Error }}{{ else }}{{ .Full }}{{ end }}",
          "type": "go"
        },
        {
          "foreground": "p:green",
          "options": {
            "fetch_version": true
          },
          "style": "plain",
          "template": " \ue718 {{ if .PackageManagerIcon }}{{ .PackageManagerIcon }} {{ end }}{{ .Full }}",
          "type": "node"
        },
        {
          "foreground": "p:background",
          "options": {
            "display_mode": "files",
            "fetch_virtual_env": false
          },
          "style": "plain",
          "template": " \ue235 {{ if .Error }}{{ .Error }}{{ else }}{{ .Full }}{{ end }}",
          "type": "python"
        },
        {
          "options": {
            "time_format": "15:04:05"
          },
          "template": " \uf017 {{ .CurrentDate | date .Format }}",
          "foreground": "#00C5C7",
          "type": "time",
          "style": "plain"
        }
      ]
    },
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "foreground": "p:foreground",
          "style": "plain",
          "template": "\u2570\u2500",
          "type": "text"
        },
        {
          "template": "{{ if .Root }}<p:red> # </>{{else}} ❯ {{end}}",
          "foreground": "#43D426",
          "type": "text",
          "style": "plain"
        }
      ],
      "type": "prompt"
    }
  ],
  "version": 4
}
